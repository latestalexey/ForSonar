				СкопироватьКнопкуЕще("ПоказатьРасхожденияПриемки");
			КонецЕсли;
			
			//Кнопка "Переотправить"
			Если (ВыбраннаяСтрока.ТипСообщения = "PORDERS"
				Или ВыбраннаяСтрока.ТипСообщения = "ORDRSP"
				Или ВыбраннаяСтрока.ТипСообщения = "DESADV"
				Или ВыбраннаяСтрока.ТипСообщения = "INVOIC" 
				Или ВыбраннаяСтрока.ТипСообщения = "COINVOIC" 
				Или ВыбраннаяСтрока.ТипСообщения = "ALCRPT")
				
